{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@buyforce/ui": ["packages/ui"],
      "@buyforce/features/*": ["packages/features/*"],
      "@buyforce/lib": ["packages/lib"],
      "@buyforce/utils": ["packages/utils"],
      "@buyforce/types": ["packages/types"]
    }
  }
}
